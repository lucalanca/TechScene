doctype html5

html.no-js(lang='en')

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')

    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    meta(name='format-detection', content='telephone=no')

    block htmlhead

    link(rel='stylesheet', href='#{relativePath}/css/main.css')

  body
    include /components/components
    +sidebar
    article.l-main-content
      block htmlbody
    article.l-detail-view
      block detailview
    block js
      script(src='#{relativePath}/bower_components/requirejs/require.js')
      script(src='#{relativePath}/js/main.js')

      script.
        requirejs.config({
          baseUrl: '#{relativePath}/js/',
          paths: {
            jquery: '#{relativePath}bower_components/jquery/dist/jquery',
            mediaQuery: '#{relativePath}bower_components/sensible/mediaQuery',
            /* add compoenents as this
            company-thumbnail: '#{relativePath}components/mycomponent/mycomponent'
            */
           "companyThumbnail": '#{relativePath}components/company-thumbnail/company-thumbnail'
          },
          shim: {}
        });



